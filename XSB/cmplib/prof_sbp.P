/*----conlength---------------------------------------------------------*/

conlength(Con, Length) :-
	obsolete('conlength/2 in module prof_sbp',
		 'use conlength/2 in module gensym'),
	conname(Con, Name), str_len(Name, Len), Length = Len.

/*----gennum------------------------------------------------------------*/

gennum(N) :-
	obsolete('gennum/1 in module prof_sbp',
		 'use gennum/1 in module gensym'),
	conget(gennum_val, O), N is O + 1, conset(gennum_val, N).

/*----gensym------------------------------------------------------------*/

gensym(R, C) :-
	obsolete('gensym/2 in module prof_sbp',
		 'use gensym/2 in module gensym'),
	gennum(N), atom_codes(R, N1), name(N, N2),
	append(N1, N2, N3), atom_codes(C, N3).

/*----copyterm----------------------------------------------------------*/
/* Get a copy of the Term, with a new set of variables.			*/

copyterm(Term, NewTerm) :-
	obsolete('copyterm/2 in module prof_sbp',
		 'use copy_term/2 in module basics'),
	copyterm(Term, NewTerm, _).

copyterm(Term, NewTerm, VarDict) :- var(Term), !,
	dict_lookup(Term, NewTerm, VarDict).
copyterm(Term, Term, _) :- atomic(Term), !.
copyterm(Term, NewTerm, VarDict) :- 
	functor(Term, Func, Arity),
	functor(NewTerm, Func, Arity),
	copyterm_args(Term, NewTerm, Arity, VarDict).

copyterm_args(_, _, 0, _) :- !.
copyterm_args(Term, NewTerm, N, VarDict) :-
	arg(N, Term, Arg),
	copyterm(Arg, NewArg, VarDict),
	arg(N, NewTerm, NewArg),
	N1 is N - 1,
	copyterm_args(Term, NewTerm, N1, VarDict).

conset(Con, Val) :- 
	obsolete('conset/2 in module prof_sbp',
		 'use conset/2 in module gensym'),
	conpsc(Con, Psc), psc_set_prop(Psc, Val).

conget(Con, Val) :- 
	obsolete('conget/2 in module prof_sbp',
		 'use conget/2 in module gensym'),
	conpsc(Con, Psc), psc_prop(Psc, Val0), Val = Val0.

coninc(Con) :-
	obsolete('coninc/2 in module prof_sbp',
		 'use coninc/2 in module gensym'),
	conpsc(Con, Psc), psc_prop(Psc, N),
	NewN is N+1, psc_set_prop(Psc, NewN).

/*======================================================================*/
/* counter routines. A counter is a unary term.				*/
/*======================================================================*/

newcounter(C) :-
	obsolete('newcounter/1 in module prof_sbp',
		 'use newcounter/1 in module gensym'),
	conpsc(C, Psc), psc_set_type(Psc, 8),
	arg(1, C, V), 
	( integer(V), V0 = V
	; V0 = 0
	),
	psc_set_prop(Psc, V0).

inccounter(C) :- 
	obsolete('inccounter/1 in module prof_sbp',
		 'use inccounter/1 in module gensym'),
	conpsc(C, Psc), psc_prop(Psc, V), 
	V1 is V + 1, psc_set_prop(Psc, V1).

getcounter(C) :-
	obsolete('getcounter/1 in module prof_sbp',
		 'use getcounter/1 in module gensym'),
	conpsc(C, Psc), psc_prop(Psc, V), arg(1, C, V).


