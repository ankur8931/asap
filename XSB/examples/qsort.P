demo :- qsort([3,5,6,2,7,1], R), write(R).

qsort([X|T],R) :-
	part(X,T,U1,U2),
	qsort(U1,V1),
	qsort(U2,V2),
	append(V1,[X|V2],R).
qsort([],[]).

part(M,[E1|T],[E1|U1],U2) :-
	E1 =< M, part(M,T,U1,U2).
part(M,[E1|T],U1,[E1|U2]) :-
	E1 > M, part(M,T,U1,U2).
part(_,[],[],[]).

append([],X,X).
append([H|L1],L2,[H|L3]) :- append(L1,L2,L3).

