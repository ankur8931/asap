	 findall(Atom-TV,(get_returns_and_tvs(SF,RetStruct,TV),bindreturn(C1,RetStruct,Atom)),Rets),
	 get_callsto_number(SF,CallsTo),
	 (get_current_scc(SF,Number) -> Scc = scc(Number) ; Scc = completed),
