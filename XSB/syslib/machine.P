install_attribute_portray_hook(Mod,Attr,Handler) :-
      ( retract(attribute_portray_hook(Mod,_,_)) ->
	  warning((' replacing previous attribute_portray_hook for module ',Mod))
      ;
              true
      ),
      assert(attribute_portray_hook(Mod,Attr,Handler)).

