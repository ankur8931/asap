        term_psc(Term, TermPSC),
        (TermPSC =:= 0
	 ->	Module = unknown1
	 ;	psc_data(TermPSC, ModulePSCorFile),
		(integer(ModulePSCorFile)
		 ->	(ModulePSCorFile =:= 0
			 ->	Module = unknown2
			 ;	psc_name(ModulePSCorFile, Module0),
				Module = Module0
			)
		 ;	Module = usermod
		)
	).

